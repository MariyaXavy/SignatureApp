@model SignatureApp.Models.UserForm
@{
    ViewData["Title"] = "Confirmation";
}
<h2>Submission Successful</h2>
<div class="mb-3"><strong>Name:</strong> @Model.Name</div>
<div class="mb-3"><strong>Email:</strong> @Model.Email</div>
<div class="mb-3"><strong>Phone:</strong> @Model.Phone</div>
<div class="mb-3">
    <strong>Signature:</strong><br />
    <img src="@Model.Signature" alt="User Signature" style="border:1px solid #ccc; width:500px;" />
</div>
